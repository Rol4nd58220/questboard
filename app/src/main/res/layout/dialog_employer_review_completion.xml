<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1A1A1A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review Job Completion"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review the job seeker's completion submission"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"/>

        <!-- Job Details Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Details"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#0F0F0F"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvReviewJobTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Job Title"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvReviewJobSeekerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Job Seeker: John Doe"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvReviewSubmittedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submitted: Dec 3, 2024"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Completion Status -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completion Status"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvCompletionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœ“ Job completed successfully"
            android:textColor="#4CAF50"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#1B5E20"
            android:layout_marginBottom="12dp"/>

        <!-- Issues/Concerns (if any) -->
        <TextView
            android:id="@+id/tvIssuesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issues Reported"
            android:textColor="#FF9800"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvIssuesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issues description"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#2C2C2C"
            android:layout_marginBottom="12dp"
            android:visibility="gone"/>

        <!-- Additional Notes -->
        <TextView
            android:id="@+id/tvNotesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Additional Notes"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvNotesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#2C2C2C"
            android:layout_marginBottom="20dp"
            android:visibility="gone"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginBottom="20dp"/>

        <!-- Employer Review Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Review"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Confirmation Checkbox -->
        <CheckBox
            android:id="@+id/cbConfirmCompletion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I confirm that the job has been completed as agreed"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:buttonTint="#4CAF50"
            android:layout_marginBottom="16dp"/>

        <!-- Rating Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate Job Seeker Performance"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="0"
            android:layout_marginBottom="16dp"
            style="@style/Widget.AppCompat.RatingBar"/>

        <!-- Feedback Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedback for Job Seeker"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:boxBackgroundColor="#0F0F0F"
            app:boxStrokeColor="#4CAF50"
            app:hintTextColor="#AAAAAA">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmployerFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Share your experience working with this job seeker"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:minHeight="120dp"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:maxLines="6"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Payment Confirmation Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Confirmation"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- Payment Method Selection -->
        <RadioGroup
            android:id="@+id/rgPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <RadioButton
                android:id="@+id/rbCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cash Payment"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:buttonTint="#4CAF50"/>

            <RadioButton
                android:id="@+id/rbGCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GCash / E-Wallet"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:buttonTint="#4CAF50"/>

        </RadioGroup>

        <!-- Payment Confirmation Checkbox -->
        <CheckBox
            android:id="@+id/cbPaymentConfirmed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I confirm that I have made the payment"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:buttonTint="#4CAF50"
            android:enabled="false"
            android:layout_marginBottom="20dp"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancelReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#555555"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginEnd="12dp"/>

            <Button
                android:id="@+id/btnSubmitReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Review"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#4CAF50"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

