<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#1A1A18">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Job Title -->
        <TextView
            android:id="@+id/tvDialogJobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Employer Name -->
        <TextView
            android:id="@+id/tvDialogEmployerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employer: Name"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <!-- Category -->
        <TextView
            android:id="@+id/tvDialogCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category: Construction"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <!-- Location -->
        <TextView
            android:id="@+id/tvDialogLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Manila"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <!-- Amount -->
        <TextView
            android:id="@+id/tvDialogAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay: â‚±500.00 / Hourly"
            android:textColor="#FFC107"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Date and Time -->
        <TextView
            android:id="@+id/tvDialogDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date/Time: 12/01/2024 09:00"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"/>

        <!-- Description Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tvDialogDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job description goes here..."
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"/>

        <!-- Requirements Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requirements:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <!-- Requirements -->
        <TextView
            android:id="@+id/tvDialogRequirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requirements go here..."
            android:textColor="#CCCCCC"
            android:textSize="14sp"/>

    </LinearLayout>

</ScrollView>

