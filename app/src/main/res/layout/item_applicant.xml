<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="#0F0F0F"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Time + Photo + Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivApplicantPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_placeholder"
                android:background="@drawable/rounded_card"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <TextView
                    android:id="@+id/tvApplicantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvJobTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Driver"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/tvAppliedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Applied 2 hours ago"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Skills -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:singleLine="false"/>

        <!-- Distance & Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.5 km away"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:drawableLeft="@android:drawable/ic_menu_mylocation"
                android:drawablePadding="4dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textColor="#FFBB00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_star_filled"
                android:drawablePadding="4dp"/>

            <TextView
                android:id="@+id/tvReviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(120 reviews)"
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>

        <!-- Rating Breakdown (Expandable) -->
        <LinearLayout
            android:id="@+id/ratingBreakdownContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvViewRates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View detailed ratings â–¼"
                android:textColor="#FF8C00"
                android:textSize="13sp"
                android:padding="4dp"/>

            <!-- 5 Stars -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"/>

                <ProgressBar
                    android:id="@+id/progressBar5"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:max="100"
                    android:progress="70"
                    android:progressDrawable="@drawable/progress_brown"/>

                <TextView
                    android:id="@+id/tvPercent5"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="70%"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- 4 Stars -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"/>

                <ProgressBar
                    android:id="@+id/progressBar4"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:max="100"
                    android:progress="20"
                    android:progressDrawable="@drawable/progress_brown"/>

                <TextView
                    android:id="@+id/tvPercent4"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="20%"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- 3 Stars -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"/>

                <ProgressBar
                    android:id="@+id/progressBar3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:max="100"
                    android:progress="5"
                    android:progressDrawable="@drawable/progress_brown"/>

                <TextView
                    android:id="@+id/tvPercent3"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="5%"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- 2 Stars -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"/>

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:max="100"
                    android:progress="3"
                    android:progressDrawable="@drawable/progress_brown"/>

                <TextView
                    android:id="@+id/tvPercent2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="3%"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- 1 Star -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"/>

                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:max="100"
                    android:progress="2"
                    android:progressDrawable="@drawable/progress_brown"/>

                <TextView
                    android:id="@+id/tvPercent1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="2%"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:gravity="end"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Bio -->
        <TextView
            android:id="@+id/tvBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experienced delivery driver with 5+ years of experience. Reliable and punctual."
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:maxLines="3"
            android:ellipsize="end"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnView"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="View Profile"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:layout_marginRight="8dp"/>

            <Button
                android:id="@+id/btnShortlist"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="Shortlist"
                android:textColor="#FFFFFF"
                android:background="@drawable/orange_button"
                android:layout_marginRight="8dp"/>

            <Button
                android:id="@+id/btnReject"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="Reject"
                android:textColor="#FFFFFF"
                android:background="@drawable/gray_button"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

