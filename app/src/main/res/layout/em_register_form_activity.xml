<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A18"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- TITLE -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your Account"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <!-- SUBTITLE -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entered Details should be the same with your ID"
            android:textColor="#CCCCCC"
            android:textSize="13sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="4dp"/>

        <!-- FIRST NAME -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name *"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your first name"
            android:textColor="#FFFFFF"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:background="@drawable/input_field"/>

        <!-- MIDDLE NAME -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Middle Name *"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etMiddleName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your middle name"
            android:textColor="#FFFFFF"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:background="@drawable/input_field"/>

        <!-- LAST NAME -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name *"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your last name"
            android:textColor="#FFFFFF"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:background="@drawable/input_field"/>

        <!-- PHONE NUMBER -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number *"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your phone number"
            android:inputType="phone"
            android:textColor="#FFFFFF"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:background="@drawable/input_field"/>

        <!-- ADDRESS LINE 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address Line 1 *"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etAddress1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your address line 1"
            android:textColor="#FFFFFF"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:background="@drawable/input_field"/>

        <!-- ADDRESS LINE 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address Line 2 *"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etAddress2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your address line 2"
            android:textColor="#FFFFFF"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:background="@drawable/input_field"/>

        <!-- BIRTHDAY -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birthday *"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etBirthday"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="MM/DD/YEAR"
            android:textColor="#FFFFFF"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:inputType="date"
            android:background="@drawable/input_field"/>

        <!-- Business Permit -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Business Permit *"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:id="@+id/spinnerBusinessPermit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_field"
            android:padding="8dp"
            android:spinnerMode="dropdown"/>

        <!-- Preview box -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Business Permit *"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="12dp"/>

        <ImageView
            android:id="@+id/BusinessPreview"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:background="#2A2A28"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnUploadBusiness"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"/>



        <!-- VALID ID SELECT -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Valid ID *"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:id="@+id/spinnerValidId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_field"
            android:padding="8dp"
            android:spinnerMode="dropdown"/>

        <!-- UPLOAD FRONT ID -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Front ID *"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="12dp"/>

        <!-- Preview box -->
        <ImageView
            android:id="@+id/imgFrontPreview"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:background="#2A2A28"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnUploadFront"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"/>

        <!-- UPLOAD BACK ID -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Back ID *"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="15dp"/>

        <!-- Preview box -->
        <ImageView
            android:id="@+id/imgBackPreview"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:background="#2A2A28"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnUploadBack"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"/>

        <!-- SIGN UP BUTTON -->
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Sign Up"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_button"/>

        <!-- FOOTER -->
        <TextView
            android:id="@+id/tvFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Log In"
            android:textColor="#BBBBBB"
            android:textSize="13sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"/>

    </LinearLayout>
</ScrollView>
