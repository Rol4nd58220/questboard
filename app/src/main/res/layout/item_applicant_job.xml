<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="22dp">

    <!-- Posted date -->
    <TextView
        android:id="@+id/txtPosted"
        android:text="Posted: 2 days ago"
        android:textColor="#BBBBBB"
        android:textSize="13sp"/>

    <!-- Job title -->
    <TextView
        android:id="@+id/txtJobTitle"
        android:text="Errand Runner"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"/>

    <!-- Status & Applicants -->
    <TextView
        android:id="@+id/txtStatus"
        android:text="Status: Open | Applicants: 3"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:layout_marginTop="2dp"/>

    <!-- Row with small image + button -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <!-- IMAGE -->
        <ImageView
            android:id="@+id/imgJob"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_card"
            android:src="@drawable/sample_job_image"/>

        <!-- BUTTON -->
        <Button
            android:id="@+id/btnViewApplicants"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="View Applicants  â†’"
            android:textColor="#FFFFFF"
            android:background="@drawable/gray_button"/>
    </LinearLayout>

</LinearLayout>
