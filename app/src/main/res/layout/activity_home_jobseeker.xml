<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A18">

    <!-- ========================================= -->
    <!-- SCROLL CONTENT (from top to above nav bar) -->
    <!-- ========================================= -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ===================== -->
            <!-- APP BAR (Top Section) -->
            <!-- ===================== -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnMenu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_menu"
                    android:tint="#FFFFFF"/>

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="273dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/logo" />

                <ImageView
                    android:id="@+id/btnNotif"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_notification"
                    android:tint="#FFFFFF"/>
            </LinearLayout>

            <!-- =============== -->
            <!-- SEARCH BAR      -->
            <!-- =============== -->
            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:hint="Search jobs..."
                android:paddingLeft="45dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:background="@drawable/search_field"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="-38dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_search"
                android:tint="#FFFFFF"/>

            <!-- ======================== -->
            <!-- FILTER CHIPS / CATEGORIES -->
            <!-- ======================== -->
            <LinearLayout
                android:id="@+id/filterRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp">

                <!-- ACTIVE CHIP -->
                <TextView
                    android:id="@+id/chipAll"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="All"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:background="@drawable/chip_selected"
                    android:layout_marginRight="10dp"/>

                <!-- INACTIVE CHIP -->
                <TextView
                    android:id="@+id/chipNearby"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="Nearby"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:background="@drawable/chip_unselected"
                    android:layout_marginRight="10dp"/>

                <!-- INACTIVE CHIP -->

                <!-- INACTIVE CHIP -->
                <TextView
                    android:id="@+id/chipHourly"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/chip_unselected"
                    android:gravity="center"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="Hourly"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/chipUrgent"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="Urgent"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:background="@drawable/chip_unselected"
                    android:layout_marginRight="10dp"/>

                <!-- FILTER ICON CHIP -->
                <LinearLayout
                    android:id="@+id/filterIconChip"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/chip_unselected"
                    android:gravity="center"
                    android:layout_marginLeft="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_filter"
                        android:tint="#FFFFFF"/>
                </LinearLayout>

            </LinearLayout>


            <!-- ============================ -->
            <!-- RECENTLY VIEWED TITLE        -->
            <!-- ============================ -->
            <TextView
                android:text="Recently Viewed"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="28dp"/>

            <!-- RECENTLY VIEWED RECYCLER -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRecent"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="12dp"
                android:overScrollMode="never"/>

            <!-- ============================ -->
            <!-- PENDING APPLICATIONS TITLE   -->
            <!-- ============================ -->
            <TextView
                android:text="Pending Applications"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"/>

            <!-- PENDING APPLICATIONS RECYCLER -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:overScrollMode="never"/>

            <!-- ============================ -->
            <!-- AVAILABLE JOBS TITLE         -->
            <!-- ============================ -->
            <TextView
                android:text="Available Jobs"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"/>

            <!-- AVAILABLE JOBS RECYCLER -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:overScrollMode="never"/>

        </LinearLayout>
    </ScrollView>

    <!-- ======================= -->
    <!-- FIXED BOTTOM NAV BAR    -->
    <!-- ======================= -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
