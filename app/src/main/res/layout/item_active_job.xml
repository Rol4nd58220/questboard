<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardActiveJob"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#0F0F0F"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Job Title -->
        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Employer Name -->
        <TextView
            android:id="@+id/tvEmployerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer Name"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <!-- Status Badge -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✓ Active Job"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#1B5E20"/>

        <!-- Accepted Date -->
        <TextView
            android:id="@+id/tvAcceptedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accepted: Dec 1, 2024"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_marginTop="8dp"/>

        <!-- Confirm Completion Button -->
        <TextView
            android:id="@+id/tvConfirmCompletion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="✓ Confirm Completion"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvViewJob"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="View Job"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/rounded_button"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tvContactEmployer"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Contact Employer"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center"
                android:backgroundTint="#4CAF50"
                android:background="@drawable/rounded_button"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

