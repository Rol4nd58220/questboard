<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Left side content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="16dp">

            <!-- Posted time -->
            <TextView
                android:id="@+id/tvPostedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"/>

            <!-- Job Title -->
            <TextView
                android:id="@+id/tvJobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <!-- Status and Applicants -->
            <TextView
                android:id="@+id/tvStatusApplicants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"/>

            <!-- View Applicants Button -->
            <Button
                android:id="@+id/btnViewApplicants"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:text="@string/view_applicants"
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                android:textAllCaps="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/button_view_applicants"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:drawableTint="@color/text_primary"
                android:drawablePadding="8dp"/>

        </LinearLayout>

        <!-- Right side image -->
        <ImageView
            android:id="@+id/ivJobImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/job_image"
            android:src="@drawable/employer"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

