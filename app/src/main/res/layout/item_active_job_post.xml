<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/card_background_darker"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Job Info Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Posted Time -->
            <TextView
                android:id="@+id/tvPostedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/posted_time"
                android:textSize="11sp"
                android:textColor="@color/text_tertiary"/>

            <!-- Job Title -->
            <TextView
                android:id="@+id/tvJobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/app_name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <!-- Job Status -->
            <TextView
                android:id="@+id/tvJobStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/job_status"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"/>

            <!-- View Applicants Button -->
            <Button
                android:id="@+id/btnViewApplicants"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:text="@string/view_applicants"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:background="@drawable/button_view_applicants"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:drawablePadding="4dp"
                android:textAllCaps="false"/>

        </LinearLayout>

        <!-- Job Image -->
        <ImageView
            android:id="@+id/ivJobImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_card"
            android:contentDescription="@string/app_name"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

