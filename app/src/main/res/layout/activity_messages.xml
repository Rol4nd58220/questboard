<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A18">

    <!-- ========================================= -->
    <!-- MAIN CONTENT (SCROLLABLE)                 -->
    <!-- ========================================= -->
    <ScrollView
        android:id="@+id/scrollMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- =============================== -->
            <!-- APP BAR -->
            <!-- =============================== -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnMenu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_menu"
                    android:tint="#FFFFFF"/>

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="140dp"
                    android:layout_height="45dp"
                    android:src="@drawable/questboard_logo"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:adjustViewBounds="true"/>

                <ImageView
                    android:id="@+id/btnNotif"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_notifications"
                    android:tint="#FFFFFF"/>
            </LinearLayout>

            <!-- =============================== -->
            <!-- SEARCH BAR -->
            <!-- =============================== -->
            <EditText
                android:id="@+id/etSearchMessages"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:hint="Search Messages"
                android:paddingLeft="45dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:background="@drawable/search_field"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="-38dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_search"
                android:tint="#FFFFFF"/>

            <!-- =============================== -->
            <!-- MESSAGES LIST -->
            <!-- =============================== -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMessages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </ScrollView>

    <!-- ========================================= -->
    <!-- FLOATING ACTION BUTTON (+)                -->
    <!-- ========================================= -->
    <ImageView
        android:id="@+id/fabNewMessage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="12dp"
        android:background="@drawable/circle_brown"
        android:src="@drawable/ic_add"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"/>

    <!-- ========================================= -->
    <!-- BOTTOM NAVIGATION                          -->
    <!-- ========================================= -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
