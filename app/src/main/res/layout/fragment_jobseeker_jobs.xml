<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1A18">

    <!-- Applied/Active Tabs -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- APPLIED TAB (active by default - 100% opacity) -->
        <LinearLayout
            android:id="@+id/tabAppliedContainer"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tabApplied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Applied"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:alpha="1.0"/>

            <View
                android:id="@+id/underlineApplied"
                android:layout_width="55dp"
                android:layout_height="3dp"
                android:layout_marginTop="6dp"
                android:background="#FFFFFF"
                android:alpha="1.0"/>
        </LinearLayout>

        <!-- ACTIVE TAB (inactive by default - 50% opacity) -->
        <LinearLayout
            android:id="@+id/tabActiveContainer"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tabActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:alpha="0.5"/>

            <View
                android:id="@+id/underlineActive"
                android:layout_width="55dp"
                android:layout_height="3dp"
                android:layout_marginTop="6dp"
                android:background="#FFFFFF"
                android:alpha="0.5"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvJobsContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jobs Fragment"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse and search for jobs"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>

