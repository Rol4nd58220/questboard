<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A18">

    <!-- =============================== -->
    <!-- SCROLL CONTENT                  -->
    <!-- =============================== -->
    <ScrollView
        android:id="@+id/scrollJobs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        android:padding="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- =============================== -->
            <!-- APP BAR                         -->
            <!-- =============================== -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnMenu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_menu"
                    android:tint="#FFFFFF"/>

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="265dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/logo" />

                <ImageView
                    android:id="@+id/btnNotif"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_notification"
                    android:tint="#FFFFFF"/>
            </LinearLayout>

            <!-- =============================== -->
            <!-- TABS (Applied | Active)         -->
            <!-- =============================== -->
            <!-- APPLIED TAB (active) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <!-- APPLIED TAB (active) -->
                <LinearLayout
                    android:id="@+id/tabAppliedContainer"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp">

                    <TextView
                        android:id="@+id/tabApplied"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Applied"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <View
                        android:id="@+id/underlineApplied"
                        android:layout_width="55dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="6dp"
                        android:background="#ffffff"/>
                </LinearLayout>

                <!-- ACTIVE TAB (inactive) -->
                <LinearLayout
                    android:id="@+id/tabActiveContainer"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tabActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Active"
                        android:textColor="#888888"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/underlineActive"
                        android:layout_width="55dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="6dp"
                        android:background="#ffffff"
                        android:alpha="0.5"/>
                </LinearLayout>

            </LinearLayout>

            <!-- =============================== -->
            <!-- PENDING APPLICATIONS            -->
            <!-- =============================== -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPendingJobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>


            <!-- =============================== -->
            <!-- RECOMMENDATION TITLE           -->
            <!-- =============================== -->
            <TextView
                android:text="Recommendation"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="28dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRecommendation"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:overScrollMode="never"/>

            <!-- =============================== -->
            <!-- AVAILABLE JOBS NEAR YOU        -->
            <!-- =============================== -->
            <TextView
                android:text="Available Jobs near you"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="28dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerAvailableJobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- =============================== -->
    <!-- BOTTOM NAVIGATION               -->
    <!-- =============================== -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
