<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#0F0F0F"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Status Badge - Accepted -->
        <TextView
            android:id="@+id/tvActiveStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#4CAF50"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginBottom="12dp"/>

        <!-- Job Title -->
        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="House Cleaner Needed"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"/>

        <!-- Employer Name -->
        <TextView
            android:id="@+id/tvEmployerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employer: Juan Dela Cruz"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <!-- Job Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Payment -->
            <TextView
                android:id="@+id/tvPayment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="₱500/Daily"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Location -->
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manila"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="4dp"
                android:drawableTint="#AAAAAA"/>

        </LinearLayout>

        <!-- Accepted Time -->
        <TextView
            android:id="@+id/tvAcceptedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accepted: 1 day ago"
            android:textColor="#4CAF50"
            android:textSize="13sp"
            android:layout_marginBottom="12dp"/>

        <!-- Job Date/Time -->
        <TextView
            android:id="@+id/tvJobDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scheduled: 12/15/2024 09:00 AM"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"/>

        <!-- Confirm Completion Button -->
        <Button
            android:id="@+id/btnConfirmCompletion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✓ Confirm Completion"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#4CAF50"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnMessageEmployer"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Message"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#2196F3"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnViewJob"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="View Details"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="@drawable/rounded_button"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

