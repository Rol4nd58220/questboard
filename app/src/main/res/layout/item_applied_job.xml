<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardApplication"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#0F0F0F"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Job Title -->
        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Employer Name -->
        <TextView
            android:id="@+id/tvEmployerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer Name"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <!-- Status and Date Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvApplicationStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pending"
                android:textColor="#FFC107"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvAppliedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Applied: Dec 1, 2024"
                android:textColor="#999999"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvViewJob"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="View Job"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/rounded_button"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tvCancelApplication"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center"
                android:backgroundTint="#F44336"
                android:background="@drawable/rounded_button"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

