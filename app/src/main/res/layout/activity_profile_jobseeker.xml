<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A18">

    <!-- ========================================= -->
    <!-- SCROLLVIEW for whole content -->
    <!-- ========================================= -->
    <ScrollView
        android:id="@+id/scrollProfile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="80dp">


            <!-- ========================================= -->
            <!-- TOP BAR (Back &amp; Settings) -->
            <!-- ========================================= -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_back"
                    android:tint="#FFFFFF"/>

                <ImageView
                    android:id="@+id/btnSettings"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_settings"
                    android:tint="#FFFFFF"/>
            </LinearLayout>

            <!-- ========================================= -->
            <!-- PROFILE PICTURE -->
            <!-- ========================================= -->
            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/avatar_placeholder"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_gray"
                android:padding="2dp"/>

            <!-- NAME &amp; ROLE -->
            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ethan Carter"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txtRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Freelancer"
                android:textSize="14sp"
                android:textColor="#AAAAAA"
                android:gravity="center"/>

            <!-- ========================================= -->
            <!-- ABOUT ME -->
            <!-- ========================================= -->
            <TextView
                android:text="About Me"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/txtAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I'm a versatile event crew member with 5+ years of experience assisting in setup, managing, and breaking down events of all scales."
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            <!-- ========================================= -->
            <!-- CREDIBILITY -->
            <!-- ========================================= -->
            <TextView
                android:text="Credibility"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry Level"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="6dp"/>

            <ProgressBar
                android:id="@+id/progressCredibility"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="40"
                android:max="100"
                android:progressDrawable="@drawable/progress_brown"
                android:layout_marginTop="6dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#333333"/>

            <!-- ========================================= -->
            <!-- PERSONAL DETAILS -->
            <!-- ========================================= -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">

                <TextView
                    android:text="Location"
                    android:textColor="#888888"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/txtLocation"
                    android:text="Baguio City"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:text="Languages"
                    android:textColor="#888888"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/txtLanguages"
                    android:text="English, Korean"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>

            <!-- ========================================= -->
            <!-- WORK EXPERIENCE -->
            <!-- ========================================= -->
            <TextView
                android:text="Work Experience / Task History"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"/>

            <!-- ========================================= -->
            <!-- SKILLS &amp; TOOLS -->
            <!-- ========================================= -->
            <TextView
                android:text="Skills &amp; Tools"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"/>

            <!-- ========================================= -->
            <!-- AVAILABILITY -->
            <!-- ========================================= -->
            <TextView
                android:text="Availability"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerAvailability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"/>

            <!-- ========================================= -->
            <!-- DOCUMENTS -->
            <!-- ========================================= -->
            <TextView
                android:text="Documents"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/txtValidID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valid ID"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/txtEndorsements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Referrals &amp; Endorsements"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            <!-- ========================================= -->
            <!-- BUTTONS -->
            <!-- ========================================= -->

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:text="Edit Profile"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"/>

            <Button
                android:id="@+id/btnViewStats"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:text="View Task Stats"
                android:textColor="#FFFFFF"
                android:background="@drawable/gray_button"/>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:text="Log Out"
                android:textColor="#FFFFFF"
                android:background="@drawable/gray_button"/>

        </LinearLayout>
    </ScrollView>

    <!-- ========================================= -->
    <!-- BOTTOM NAVIGATION -->
    <!-- ========================================= -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
