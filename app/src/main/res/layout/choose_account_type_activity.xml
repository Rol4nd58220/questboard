<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A18"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvChooseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Account Type"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>

        <!-- JOB SEEKER CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0F0F0F"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:elevation="5dp"
            android:clipToOutline="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/jobseeker"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find a Job"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For people looking for part-time or hourly work"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnContinueJobSeeker"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:text="Continue"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"/>
        </LinearLayout>

        <!-- EMPLOYER CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0F0F0F"
            android:padding="12dp"
            android:elevation="5dp"
            android:clipToOutline="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/employer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hire for a Job"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For businesses or individuals hiring workers"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnContinueEmployer"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:text="Continue"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"/>
        </LinearLayout>

        <!-- FOOTER TEXT -->
        <TextView
            android:id="@+id/tvFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By continuing, you agree to our Terms of Service and\nPrivacy Policy."
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>
</ScrollView>
